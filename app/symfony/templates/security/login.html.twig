{% extends 'base.html.twig' %}

{% block body %}
    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1 class="card-text">Se connectez</h1>
                    {{ form_start(form) }}
                    {% if csrf_token('authenticate') %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                    {% endif %}

                    <div class="mb-3">
                        {{ form_row(form._username, {
                            label: 'login.form.email.name',
                            attr: {
                                'class': 'form-control',
                                'placeholder': 'login.form.email.placeholder'
                            }
                        }) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form._password, {
                            label: 'login.form.password.name',
                            attr: {
                                'class': 'form-control',
                                'placeholder': 'login.form.password.placeholder'
                            }
                        }) }}
                    </div>

                    <div class="d-grid mb-0 text-center">
                        <button class="btn btn-primary" type="submit"><i class="mdi mdi-login"></i> {{ 'login.btn'|trans }} </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
