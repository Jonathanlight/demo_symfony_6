{% extends 'base.html.twig' %}

{% block body %}
    <section class="py-5 text-center container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <!-- Form Filter -->
                <form class="row border p-2">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <select name="category" class="form-select" aria-label="category">
                                <option selected>Categorie</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                        <div class="col-md-5">
                            <label for="search">
                                <input type="text" placeholder="Que recherchez-vous ?" class="form-control" id="search">
                            </label>
                        </div>
                        <div class="col-md-4">
                            <label for="city">
                                <input type="text" placeholder="Saisissez une ville" class="form-control" id="city">
                            </label>
                        </div>
                    </div>
                    <div class="row g-3">
                        <hr>
                        <div class="col-md-4">
                            <label for="min">
                                <input type="number" placeholder="Prix Minimum" class="form-control" id="min">
                            </label>
                        </div>
                        <div class="col-md-4">
                            <label for="max">
                                <input type="number" placeholder="Prix Maximum" class="form-control" id="max">
                            </label>
                        </div>

                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary mb-3">Rechercher</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>

